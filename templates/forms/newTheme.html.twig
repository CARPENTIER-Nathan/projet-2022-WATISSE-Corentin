{% extends 'base.html.twig' %}
{% block title %} Themes ! {% endblock %}


{% block Titlebody %}Theme{% endblock %}

{% block body %}
    <div class="Contain50">
        <h3> Add a new themes to the forum</h3>
        <hr>
    {{ form_start(NewThemeForm) }}

    {{ form_row(NewThemeForm.nom) }}

    <button type="submit" class="btn btn-primary"> Add !</button>
    {{ form_end(NewThemeForm) }}
    </div>

    <div class="Contain50">
        <h3>List of actual theme in the forum</h3>
        <hr>
        <div id="Datatable">Loading...</div>

    </div>

    {% block data_tables %}
        {% if datatableThemeList is defined %}
            <script>
                $(function() {
                    $('#Datatable').initDataTables({{ datatable_settings(datatableThemeList) }},
                        {
                            "pageLength": 10,
                            columnDefs: [
                                {width: "8%", targets: 0},
                            ]
                        } );
                });

            </script>
        {% endif %}

    {% endblock %}
{% endblock %}



